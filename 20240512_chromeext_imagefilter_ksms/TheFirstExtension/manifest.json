{
    "name": "はじめての拡張機能",
    "description": "機能を拡張するものです",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "popup.html"
      },
    "background": {
        "service_worker": "/js/background.js"
    },
    "web_accessible_resources": [
        {
          "resources": ["abea.ttf", "aboutaxmas.ttf"],
          "matches": ["<all_urls>"]
        }
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "/js/content.js"
            ]
        }
    ]
  }